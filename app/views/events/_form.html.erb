<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :startdate %><br>
    <%= f.text_field :startdate, class: "datepicker form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :enddate %><br>
    <%= f.text_field :enddate, class: "datepicker form-control" %>
  </div>
  <br/>
  <div class="form-group">
    <%= f.submit 'Submit', class: 'btn btn-primary form-control' %>
  </div>
  <br/>
  <% if !@event.new_record? %>
    <div class="actions">
      <%= button_to "Delete Event", event_path(@event.id), class: "btn btn-danger form-control" %>
    </div>
    <br/>
  <% end %>
<% end %>
